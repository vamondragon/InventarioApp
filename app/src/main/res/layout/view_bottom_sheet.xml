<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet"
    android:orientation="vertical"
    android:padding="15dp">


    <LinearLayout
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_fingerprint"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_fingerprint"
            android:padding="14dp"
            android:layout_marginTop="@dimen/biometric_bottom_sheet_padding"
            android:layout_marginBottom="@dimen/biometric_bottom_sheet_padding"
            android:src="@drawable/ic_fingerprint" />

        <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titulo"
            android:textAlignment="center"
            android:textColor="@color/dialog_title"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/item_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:text="Subtitulo"
            android:textAlignment="center"
            android:textColor="@color/dialog_subtitle"
            android:textSize="13dp" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_view"
        android:layout_marginTop="@dimen/margin_xxlarge"
        android:background="@null"
        android:paddingTop="@dimen/margin_xxlarge"
        android:textColor="@color/dialog_cancel_btn" />

</RelativeLayout>
